@model IEnumerable<SRSprojekt.Models.Stolovi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("Create","Stolovi")" class="btn btn-success">
       Kreiranje novog stola

   </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.broj_stola)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zauzetost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(item => int.Parse(item.Sifra))) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.broj_stola)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zauzetost)
        </td>
        <td>
            @Html.ActionLink("Azuriraj", "Edit", new { id=item.Sifra }, new {@class = "btn btn-warning btn sm"}) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Sifra }, new { @class = "btn btn-info btn sm" }) |
            @Html.ActionLink("Izbrisi", "Delete", new { id=item.Sifra }, new { @class = "btn btn-danger btn sm" })
        </td>
    </tr>
    }

</table>
