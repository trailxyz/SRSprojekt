@model SRSprojekt.Models.rezervacija

@{
    ViewBag.Title = "Create Reservation";
}

<h2>Create Reservation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ID_stola, "Stol", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_stola, (IEnumerable<SelectListItem>)ViewBag.ID_stola, "Odaberite stol", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_stola)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DatVri, "Datum i vrijeme", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DatVri, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.DatVri)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
