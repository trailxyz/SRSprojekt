@using SRSprojekt.Models
@model List<Klub>
@{
    ViewBag.Title = "Popis klubova";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<h2>Popis</h2>

@Html.ActionLink("Kreiranje novog kluba","Azuriraj")
<br />
<br />



<table border="1">
    <tr>
        <th>ID</th>
        <th>Naziv</th>
        <th>Adresa</th>
        <th>Broj stolova</th>
        <th>Cijenovni rang</th>
        <th>Detalji</th>
        <th>Azuriraj</th>
        <th>Brisi</th>
    </tr>
    @foreach(var klubovi in Model)      
    {
                <tr>
                    <td>@klubovi.id_kluba</td>
                    <td>@klubovi.nazivK</td>
                    <td>@klubovi.adresaK</td>
                    <td>@klubovi.brStol</td>
                       <td>@klubovi.Cijenovni_Rang</td>
                    <td>@Html.ActionLink("Info", "Detalji", new { id = klubovi.id_kluba }) </td>
                    <td>@Html.ActionLink("Azuriraj", "Azuriraj", new { id = klubovi.id_kluba }) </td>
                    <td>@Html.ActionLink("Izbrisi", "Brisi", new { id = klubovi.id_kluba }) </td>
                </tr>
            }
</table>
<br />
<h5>Napomena</h5>
<h6>JE - Jeftin</h6>
<h6>SR - Srednje skup</h6>
<h6>SK - Skup</h6>
<h6>US - Ultra skup</h6>
